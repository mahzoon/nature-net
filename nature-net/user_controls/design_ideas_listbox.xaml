<UserControl x:Class="nature_net.user_controls.design_ideas_listbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:nature_net.user_controls"
             xmlns:s="clr-namespace:Microsoft.Surface.Presentation.Controls;assembly=Microsoft.Surface.Presentation"
             mc:Ignorable="d" 
             d:DesignWidth="300">
    
    <DockPanel LastChildFill="True" Background="White">
        <Label Name="desc" Height="50" DockPanel.Dock="Top" Background="Green" Foreground="White"
               HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontFamily="Segoe UI" FontSize="14" FontWeight="SemiBold">
            Design Ideas
        </Label>
        <s:SurfaceButton Name="submit_button" Height="80" DockPanel.Dock="Bottom" Background="Green" Foreground="White"
                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,0"
                         FontFamily="Segoe UI" FontSize="14" FontWeight="SemiBold"  Padding="0,0,0,25">
            Submit Design Idea</s:SurfaceButton>
        <uc:custom_listbox x:Name="design_ideas_list" />
    </DockPanel>
</UserControl>
