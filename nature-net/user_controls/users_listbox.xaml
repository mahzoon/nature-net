<UserControl x:Class="nature_net.user_controls.users_listbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:uc="clr-namespace:nature_net.user_controls"
             xmlns:s="clr-namespace:Microsoft.Surface.Presentation.Controls;assembly=Microsoft.Surface.Presentation"
             mc:Ignorable="d" 
             d:DesignWidth="300">

    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Top" BorderThickness="1" BorderBrush="Gray">
            <uc:item_generic x:Name="signup"></uc:item_generic>
        </Border>
        <s:SurfaceListBox Name="users_list" DockPanel.Dock="Top"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 ScrollViewer.CanContentScroll="False" ScrollViewer.PanningMode="VerticalOnly">
        </s:SurfaceListBox>
    </DockPanel>
    
</UserControl>
